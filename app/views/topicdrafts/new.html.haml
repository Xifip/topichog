= provide(:title, @user.name + ' | new topic draft')
.row  
  .span8.offset2
    = render partial: 'topicdraft_form', locals: {topicdraft: @topicdraft}
#topicdraftimages
  %p= image_tag @topicdraftimage.image_url if @topicdraftimage
.clear
= form_for Topicdraftimage.new do |f|
  = f.label :image, "Upload topicdraftimage:"
  = f.file_field :image, multiple: false, name: "topicdraftimage[image]"    

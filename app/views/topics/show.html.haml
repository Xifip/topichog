= provide(:title, @user.name + ' | ' + @topic.title)
.row
  %aside.span4
    %section  
      = render 'shared/user_info' 
    %section
      = render 'shared/stats'   
    = render partial: 'users/follow_form' if user_signed_in? 
    %section.my-hero-unit
      %h4 Links and references:
      .ref 
        =raw @topic.reference 
    %section.my-hero-unit
      =render 'shared/post_stats'
      =render 'shared/likers_list'   
  .span8  
    .row.my-hero-unit
      .span8
        .row   
          %span.span6
            %h1         
              =@topic.title
          %span.span1
            =render 'posts/like_form' if user_signed_in?
          %span
            = link_to "edit topic", edit_user_topicdraft_path(@user, @post.postable.topicdraft) if @user == current_user
        .row
          .span1
            %h4 Summary: 
          .span6  
            =@topic.summary
        .row  
          %p.span8
            =render 'shared/tags'       
    .row
      .span8                 
        .row
          .span8
            =raw @topic.content

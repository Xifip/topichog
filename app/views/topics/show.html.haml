= provide(:title, @user.name + ' | ' + @topic.title)
.row
  %aside.span4
    %section  
      = render 'shared/user_info' 
    %section
      = render 'shared/stats'   
    = render partial: 'users/follow_form' if user_signed_in? 
    .spacer50
    %section.my-hero-unit
      %h4 Links and references:
      .ref 
        =raw @topic.reference 
    %section.my-hero-unit
      =render 'shared/post_stats'
      =render 'shared/likers_list'   
  .span8  
    .row.my-hero-unit
      .span8
        .row 
          .span1
            -if @topicdraftimage
              = image_tag(@topicdraftimage.image_url(:thumb).to_s, alt: "", class: "img-polaroid row")
            -if !@topicdraftimage
              = avatar_for @user, size: 52           
          .span5
            %h3         
              =@topic.title
            %div  
              =@topic.summary 
            %p
              =render 'shared/tags'              
          .span1
            =render 'posts/like_form' if user_signed_in?
          %span
            = link_to "edit topic", edit_user_topicdraft_path(@user, @post.postable.topicdraft) if @user == current_user
    .row
      .span8                 
        .row
          .span8
            =raw @topic.content

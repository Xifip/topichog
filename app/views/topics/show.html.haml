= provide(:title, @user.name + ' | ' + @topic.title)
.row
  %aside.span4
    %section  
      %h1
        = @user.name
    %section
      = render 'shared/user_link'
    %section
      %p= link_to "View all users", users_path      
  .span8 
    %span.span5
      %h1        
        Title: #{@topic.title}
    %span.span3
      =render 'posts/like_form' if user_signed_in?
    %p.span8
      summary: #{@topic.summary}
    .span8
      =render 'shared/tags'
    .span8
      =render 'shared/post_stats'
    .span8
      =render 'shared/likers_list'

!!! 5
=include_gon
%html
  %head    
    %title
      #{full_title(yield(:title))}
    = stylesheet_link_tag 'application', media: "all"
    = javascript_include_tag 'application'
    = csrf_meta_tags
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  %body
    %header.navbar.navbar-fixed-top
      .navbar-inner
        .container
          .row
            #logo.span4
              %a{:href => "#"}
                =image_tag "wild-boar.png"
            .span8       
              %nav
                %ul.nav.pull-right
                  %li= link_to "Home", root_path
                  %li= link_to "Help", help_path
                  - if user_signed_in?
                    %li= link_to "new topic", new_user_topic_path(current_user)
                    %li= link_to "new project", new_user_project_path(current_user)
                    %li
                      .btn-group
                        = link_to current_user.name, user_path(current_user), class: "btn btn-info"
                        %button.btn.btn-info.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                          %span.caret
                        %ul.dropdown-menu
                          %li
                            = link_to 'Edit account', edit_user_registration_path
                          %li
                            = link_to "Logout", destroy_user_session_path, method: :delete                    
                  - else
                    %li
                      = link_to "Sign up", new_user_registration_path
                    %li
                      = link_to "Login", new_user_session_path
                            
    .container
      - flash.each do |key, value|
        = content_tag(:div, value, class: "alert alert-#{key}")      
      = yield

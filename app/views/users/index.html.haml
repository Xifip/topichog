= provide(:title, 'All users')
.row
  %aside.span4
    - if current_user  
      %section
        = render 'shared/user_info' 
      %section
        = render 'shared/stats'
  .span8
    %h3 Users list
    = will_paginate
    - if @users.any?
      %ul.users
        = render @users
      = will_paginate

= provide(:title, 'contact form')
%h1 Contact Us
.span6.offset3
  = form_for @message do |f|
    - if @message.errors.any?
      .error_messages
        %h2
          = pluralize(@message.errors.count, "error")
          prohibited this message from being saved:
        %ul
          - @message.errors.full_messages.each do |msg|
            %li= msg
    %p.field
      = f.label :name
      %br/
      = f.text_field :name
    %p.field
      = f.label :email
      %br/
      = f.text_field :email
    %p.field
      = f.label :content, "Message"
      %br/
      = f.text_area :content
    %p.actions= f.submit "Send Message", class: "btn btn-large btn-primary"

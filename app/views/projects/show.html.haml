= provide(:title, @user.name + ' | ' + @project.title)
.row
  %aside.span4
    %section  
      %h1
        = @user.name
    %section
      = render 'shared/user_link'     
  .span8 
    %span.span5
      %h1        
        Title: #{@project.title}
    %span.span2
      =render 'posts/like_form' if user_signed_in?
    %p
      summary: #{@project.summary}
    %p
      Links and references: #{raw @project.reference}
    %p
      #{raw @project.content}            
    .span8
      =render 'shared/tags'      
    .span8
      =render 'shared/post_stats'
    .span8
      =render 'shared/likers_list'

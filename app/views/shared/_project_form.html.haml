= form_for(project, :url => user_projects_url(@post.user.id)) do |f|
  = render partial: 'shared/error_messages', locals: {object: f.object}
  .field
    %h2.span8 New Project
    %p.span8
      .span1
        = f.label :title, "Title"
      .span6  
        = f.text_field :title, placeholder: "Project title..."
    %p.span8
      .span1
        = f.label :summary, "Summary"
      .span6          
        = f.text_area :summary, placeholder: "Project summary...", rows: 3
    %p.span8
      .span1
        = f.label :reference, "Links & references"
      .span6   
        = f.text_area :reference, :id =>'reference_textarea', placeholder: "Project references and links..."                     
    %p.span8
      .span1
        = f.label :tag_list, "Tags"
      .span6       
        = f.text_field :tag_list, placeholder: "Comma separated tags..."      
    %p.span8   
      = f.text_area :content, :id =>'content_textarea', placeholder: "Project content..."
    %p.span8  
      = f.submit "Submit project", class: "btn btn-large btn-primary"

%li{:id => topic_feed_item.id}
  = link_to gravatar_for(topic_feed_item.user), topic_feed_item.user
  %span.user
    = link_to topic_feed_item.user.name, topic_feed_item.user
  %span.title
    = link_to topic_feed_item.title, user_topic_path(topic_feed_item.user.id, topic_feed_item.id), id: "topic_link_#{topic_feed_item.id}"
  %span.summary= topic_feed_item.summary
  %span.timestamp
    Posted #{time_ago_in_words(topic_feed_item.created_at)} ago.
  - if current_user == topic_feed_item.user
    = link_to "delete", topic_feed_item, method: :delete, |
      data: { confirm: "You sure?" },                       |
      title: topic_feed_item.title                        |
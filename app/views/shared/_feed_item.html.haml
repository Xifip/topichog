%li{:id => feed_item.id}
  = link_to avatar_for(feed_item.user), feed_item.user
  %span
    %span.user
      = link_to feed_item.user.name, feed_item.user
    %span.title
      - if feed_item.postable_type == "Tpost"
        = link_to feed_item.postable.title, user_tpost_path(feed_item.user.id, feed_item.id), id: "feed_topic_link_#{feed_item.id}"
      - if feed_item.postable_type == "Ppost"
        = link_to feed_item.postable.title, user_ppost_path(feed_item.user.id, feed_item.id), id: "feed_project_link_#{feed_item.id}"
      - if feed_item.postable_type == "Topic"
        = link_to feed_item.postable.title, user_topic_path(feed_item.user.id, feed_item.id), id: "feed_topic_link_#{feed_item.id}"
      - if feed_item.postable_type == "Project"
        = link_to feed_item.postable.title, user_project_path(feed_item.user.id, feed_item.id), id: "feed_project_link_#{feed_item.id}"
    %span.summary= feed_item.postable.summary
  %span  
    %span.timestamp
      Posted #{time_ago_in_words(feed_item.created_at)} ago
    - if current_user == feed_item.user
      = link_to "delete", feed_item, method: :delete, |
        data: { confirm: "You sure?" },               |
        title: feed_item.postable.title               |
    %span.post_info
    - if feed_item.likes_count > 0
      %strong#liking.stat #{feed_item.likes_count}
      favorites

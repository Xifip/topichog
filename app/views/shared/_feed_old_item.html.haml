%li{:id => feed_item.id}
  = link_to gravatar_for(feed_item.user), feed_item.user
  %span.user
    = link_to feed_item.user.name, feed_item.user
  %span.title
    - if feed_item.class == Topic
      = link_to feed_item.title, user_topic_path(feed_item.user.id, feed_item.id), id: "feed_topic_link_#{feed_item.id}"
    - if feed_item.class == Project
      = link_to feed_item.title, user_project_path(feed_item.user.id, feed_item.id), id: "feed_project_link_#{feed_item.id}"
  %span.summary= feed_item.summary
  %span.timestamp
    Posted #{time_ago_in_words(feed_item.created_at)} ago.
  - if current_user == feed_item.user
    = link_to "delete", feed_item, method: :delete, |
      data: { confirm: "You sure?" },               |
      title: feed_item.title                        |